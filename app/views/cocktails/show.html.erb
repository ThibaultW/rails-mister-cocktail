<h2><%= @cocktail.name %></h2>
<h3>Ingredients</h3>
  <ul class="ingredients-list"><% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> of <%= dose.ingredient.name %>  <%= link_to "", cocktail_dose_path(@cocktail, dose), method: :delete, class: "glyphicon glyphicon-remove btn btn-delete btn-sm"%></li>
  <% end %></ul>
<%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail), class: "btn-add_ingredient btn btn-treehouse"%>
