<h1><%= @cocktail.name %></h1>
<h3>Ingredients</h3>
  <ul><% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> of <%= dose.ingredient.name %> - <%= link_to "Delete ingredient", cocktail_dose_path(@cocktail, dose), method: :delete%></li>
  <% end %></ul>
<%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail)%>
